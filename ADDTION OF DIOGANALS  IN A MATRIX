#include <iostream>
using namespace std;

 int MAX_SIZE = 100;

int main() {
    int matrix[MAX_SIZE ][MAX_SIZE ];
    int n; // Size of the square matrix

    cout << "Enter the size of the square matrix: ";
    cin >> n;

    // Input elements of the matrix
    cout << "Enter the elements of the matrix:" << endl;
    for (int i = 0; i < n; ++i) {
        for (int j = 0; j < n; ++j) {
            cin >> matrix[i][j];
        }
    }

    // Calculate the sum of the diagonals
    int primaryDiagonalSum = 0;
    int secondaryDiagonalSum = 0;

    for (int i = 0; i < n; ++i) {
        
        
        primaryDiagonalSum += matrix[i][i]; // Elements on the primary diagonal
        secondaryDiagonalSum += matrix[i][n - i - 1]; // Elements on the secondary diagonal
    }

    // Display the sum of diagonals
    cout << "Sum of the primary diagonal: " << primaryDiagonalSum << endl;
    cout << "Sum of the secondary diagonal: " << secondaryDiagonalSum << endl;

    return 0;
}
