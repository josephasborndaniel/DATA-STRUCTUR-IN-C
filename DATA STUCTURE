RECURTION FUNCTION OF FACTORIAL

#include<stdio.h>
#include<conio.h>
int fact(int n)
{
	if(n<=1)
    return 1;
    return n*fact(n-1);
}

int main()
{
  int n= 5;
  int c=fact(n);	
  printf("%d",c);
}

RECURTION OF FEBINACE SERIES

#include <stdio.h>

int fibonacci(int n) {
    if (n <= 0) {
        printf("Invalid input. Please enter a positive integer.\n");
        return -1;  
    } else if (n == 1) {
        return 0;
    } else if (n == 2) {
        return 1;
    } else {
        return fibonacci(n - 1) + fibonacci(n - 2);
    }
}

int main() {
    int n = 10; 
    
    for (int i = 1; i <= n; i++) {
        printf("%d ", fibonacci(i));
    }

    return 0;
}


FEBINACE SERIES


#include<stdio.h>
int main()
{
	int n,a=0,b=1,nextTearm;
	printf("enter a number");
	scanf("%d",&n);
	
	while(a<=n)
	{
		nextTearm=a+b;
		a=b;
		b=nextTearm;
		printf("%d ,",a);
		
	}
	return 0;
}

FACTORIAL SERIES 



-+

#include<stdio.h>
int main()
{
	int num,factorial=1,i=1;
	
	printf("enter a number");
	scanf("%d",&num);
	
	while(i<=num)
	{
		factorial=factorial*i;
		i++;
	}
	printf("%d",factorial);
	return 0;
}



