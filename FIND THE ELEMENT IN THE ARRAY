#include <stdio.h>

int main() {
    int a[100], n, x;
    printf("Enter the limit of the array: ");
    scanf("%d", &n);
    
    for (int i = 0; i < n; i++) {
        printf("Enter the %d element of the array: ", i + 1);
        scanf("%d", &a[i]);
    }
    
    printf("The array elements are: ");
    for (int i = 0; i < n; i++) {
        printf("%d, ", a[i]);
    }
    
    printf("\nEnter the desired number: ");
    scanf("%d", &x);
    
    for (int i = 0; i < n; i++) {
        if (x == a[i]) {
            printf("\n%d found at index %d\n", x, i);
            return 0;
        }
    }
    
    printf("Value is not found.\n");
    return 0;
}
